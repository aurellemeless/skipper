{
	"manifest_version": 3,
	"name": "Skipper",
	"version": "1.0",
	"description": "Modifiez la vitesse de lecture des vid√©os HTML5 sur n'importe quelle page.",
	"permissions": ["activeTab", "scripting"],
	"host_permissions": ["http://*/*", "https://*/*"],
	"icons": {
		"16": "icons/icon-16.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon-16.png",
			"48": "icons/icon-48.png",
			"128": "icons/icon-128.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	]
}
